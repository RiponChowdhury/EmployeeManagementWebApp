@*@model EmployeeManagementWebApp.Models.Employee*@
@model HomeDetailsViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.PageTitle = "Single Employee";
    var photoPath = "~/images/" + (Model.Employee.PhotoPath ?? "actress.jpg");
}

<div class="card-deck">
    
        <div class="card m-3">

            <div class="card-header">
                <h3>@Model.Employee.Name</h3>
            </div>
            <div class="card-body text-center">
                <img class="card-img-top imageThumbnail" src=@photoPath alt="Alternate Text" asp-append-version="true" />
                <h3>Name:@Model.Employee.Name</h3>
                <h3>Email:@Model.Employee.Email</h3>
                <h3>Mobile:@Model.Employee.Mobile</h3>
                <h3>Department:@Model.Employee.Department</h3>
                <div class="card-footer text-center">
                    <a asp-controller="home" asp-action="index"
                       class="btn btn-primary m-1">Back</a>
                    <a href="#" class="btn btn-primary m-1">View</a>
                    <a asp-controller="home" asp-action="edit" asp-route-id="@Model.Employee.Id" class="btn btn-primary m-1">Edit</a>
                    <a href="#" class="btn btn-danger m-1">Delete</a>

                </div>
            </div>

        </div>

    

</div>

